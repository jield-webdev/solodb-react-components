{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@jield/solodb-react-components/*": ["src/*"],
      "@jield/solodb-typescript-core": ["../solodb-typescript-core/src/index.ts"],
      "@jield/solodb-typescript-core/*": ["../solodb-typescript-core/src/*"]
    }
  },
  "include": ["./src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
